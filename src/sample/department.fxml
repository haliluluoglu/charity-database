            <ScrollPane layoutY="192.0" prefHeight="323.0" prefWidth="784.0">
               <content>
                  <TableView fx:id="tblDept" prefHeight="303.0" prefWidth="777.0">
                     <columns>
                        <TableColumn fx:id="colDeptID" prefWidth="113.0" text="Department ID" />
                        <TableColumn fx:id="colDeptName" prefWidth="98.0" text="Department Name" />
                        <TableColumn fx:id="colMgrID" prefWidth="90.0" text="Manager ID" />
