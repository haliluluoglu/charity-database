   <children>
      <AnchorPane layoutX="10.0" layoutY="10.0" prefHeight="516.0" prefWidth="784.0">
         <children>
            <Label layoutX="25.0" layoutY="57.0" text="Department ID" />
            <TextField fx:id="txtDeptID" layoutX="112.0" layoutY="53.0" prefHeight="26.0" prefWidth="138.0" />
            <Label layoutX="265.0" layoutY="57.0" text="Department Name" />
            <TextField fx:id="txtDeptName" layoutX="377.0" layoutY="52.0" prefHeight="26.0" prefWidth="138.0" />
